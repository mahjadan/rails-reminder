<!DOCTYPE html>
<html>
  <head>
    <title>RailsReminder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <%= render partial: "layouts/nav" %>
      </div>
      <div id="flash" class="flash" style="min-height: 58px;">
        <%= render "layouts/flash" %>
      </div>
      <div class="row">
        <div class="col">
          <%= yield %>
        </div>
        <div
            class="modal"
            tabindex="-1"
            data-controller="turbomodal"
            data-action="turbo:frame-load->turbomodal#open turbo:submit-end->turbomodal#close"
          >
          <div class="modal-dialog">
            <div class="modal-content">
              <%= turbo_frame_tag "modal-frame" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
