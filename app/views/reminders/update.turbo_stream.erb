<% if @replace == true %>
  <%= turbo_stream.replace(
    @old_reminder,
    partial: "reminders/reminder",
    locals: {reminder: @reminder})
    %>
  <%= turbo_stream.remove(dom_id(@old_reminder,:notification)) %>
<% else %>
  <%= turbo_stream.update(
    @reminder,
    partial: "reminders/reminder",
    locals: { reminder: @reminder }
  )
 %>
<% end %>
<%= turbo_stream.prepend "flash", partial: "layouts/flash" %>
